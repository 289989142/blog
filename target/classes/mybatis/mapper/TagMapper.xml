<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lhy.mapper.TagMapper">

    <!--新增保存标签-->
    <insert id="saveTag" parameterType="com.lhy.pojo.Tag">
        insert into blog.tag values (#{id},#{name});
    </insert>

    <!--根据id查询标签-->
    <select id="getTag" resultType="com.lhy.pojo.Tag">
        select id,name from blog.tag where id = #{id}
    </select>

    <!--查询所有标签-->
    <select id="getAllTag" resultType="com.lhy.pojo.Tag">
        select * from blog.tag
    </select>

    <resultMap id="tag" type="com.lhy.pojo.Tag">

        <id property="id" column="tid"/>

        <result property="name" column="name"/>
        <collection property="blogs" javaType="com.lhy.pojo.Blog">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
            <result property="tagId" column="tag_id"/>
        </collection>
    </resultMap>

    <!--标签页面查询-->
    <select id="getAllTagAndBlog" resultMap="tag">
        select t.id tid, t.name, b.id bid, b.title,b.tag_id from blog.tag t,blog.blog b where t.id = b.tag_id
    </select>


    <!--根据标签名称来查询-->
    <select id="getTagByName" resultType="com.lhy.pojo.Tag">
        select * from blog.tag where name = #{name}
    </select>

    <!--编辑修改标签-->
    <update id="updateTag" parameterType="com.lhy.pojo.Tag">
        update blog.tag set name = #{name} where id = #{id};
    </update>

    <!--删除标签-->
    <delete id="deleteTag" >
        delete from blog.tag where id = #{id}
    </delete>

    <!--选择博客最多的前n个标签-->
    <resultMap id="tagquery" type="com.lhy.pojo.TagQuery">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="blogNum" column="num"/>
    </resultMap>
    <select id="getNumTag" resultMap="tagquery">
        SELECT t.id , t.name, count(*) num
        FROM blog_tag b , tag t
        WHERE tag_id = t.id
        GROUP BY tag_id
        limit #{num};
    </select>
    <select id="getNumTag1" resultMap="tagquery">
        SELECT t.id , t.name, count(*) num
        FROM blog_tag b , tag t
        WHERE tag_id = t.id
        GROUP BY tag_id
    </select>





</mapper>

