    <!--from myblog.t_comment c-->
    <!--where c.parent_comment_id = #{parentCommentId}-->
    <!--</select>-->

    <!--删除评论-->
    <delete id="deleteComment" >
        delete from blog.comment where id = #{id}
    </delete>

</mapper>